{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "yarn",
  "packages": [
    "packages/*",
    "plugins/*"
  ],
  "changelogPreset": {
    "name": "conventionalcommits"
  },
  "command": {
    "version": {
      "message": "chore(release): publish version %v",
      "allowBranch": ["main", "develop"]
    }
  }
}
